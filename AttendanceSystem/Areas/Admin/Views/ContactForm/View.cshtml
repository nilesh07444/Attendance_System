@using AttendanceSystem.Helper;
@model AttendanceSystem.ContactFormVM
@{
    ViewBag.Title = "Contact";
}

<section class="section">

    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h4>Contact Form</h4>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-6">
                            @Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "" })
                            @Model.Firstname
                        </div>
                        <div class="form-group col-6">
                            @Html.LabelFor(model => model.Lastname, htmlAttributes: new { @class = "" })
                            @Model.Lastname
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            @Html.LabelFor(model => model.MobileNo, htmlAttributes: new { @class = "" })
                            @Model.MobileNo
                        </div>
                        <div class="form-group col-6">
                            @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "" })
                            @Model.EmailId
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-12">
                            @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "" })
                            @Model.Message
                        </div>
                    </div>

                </div>

                <div class="card-footer text-center">
                    <a href="/admin/contactform" class="btn btn-secondary">Cancel</a>
                </div>

            </div>
        </div>
    </div>

</section>
 