@using AttendanceSystem.Helper;
@model AttendanceSystem.ContactFormVM
@{
    ViewBag.Title = "Contact";
}

<section class="section">

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header" style="background-color: #425C59;">
                    <h4 style="color: #FFCEA3;">View Contact Request</h4>
                </div>
            </div>
            <div class="card card-primary">
                <div class="card-header" style="display: block;"> 
                    <div class="pull-right">
                        <a href="/admin/contactform" class="btn btn-warning pull-right"><i class="fas fa-backward"></i> Back</a>
                    </div>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="form-group col-4">
                            <label>Request Date</label>
                            <p>@Model.CreatedDate.ToString("dd-MM-yyyy")</p>
                        </div>
                        <div class="form-group col-4">
                            @Html.LabelFor(model => model.Firstname)
                            <p>@Model.Firstname</p>
                        </div>

                        <div class="form-group col-4">
                            @Html.LabelFor(model => model.Lastname)
                            <p>@Model.Lastname</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-4">
                            @Html.LabelFor(model => model.MobileNo)
                            <p>@Model.MobileNo</p>
                        </div>
                        <div class="form-group col-4">
                            @Html.LabelFor(model => model.EmailId)
                            <p>@Model.EmailId</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-12">
                            @Html.LabelFor(model => model.Message)
                            <p>@Model.Message</p>
                        </div>
                    </div>

                </div>
                 
            </div>
        </div>
    </div>

</section>
