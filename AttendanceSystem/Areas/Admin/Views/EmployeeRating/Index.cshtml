@using AttendanceSystem.Helper
@using AttendanceSystem.ViewModel;
@model AttendanceSystem.ViewModel.EmployeeRatingFilterVM
@{
    ViewBag.Title = "EmployeeRating";
    int counter = 1;

    List<SelectListItem> lstRateYear = new List<SelectListItem>();
    lstRateYear.Add(new SelectListItem { Value = DateTime.Now.Year.ToString(), Text = DateTime.Now.Year.ToString() });
    lstRateYear.Add(new SelectListItem { Value = (DateTime.Now.Year - 1).ToString(), Text = (DateTime.Now.Year - 1).ToString() });
    lstRateYear.Add(new SelectListItem { Value = (DateTime.Now.Year - 2).ToString(), Text = (DateTime.Now.Year - 2).ToString() });
    lstRateYear.Add(new SelectListItem { Value = (DateTime.Now.Year - 3).ToString(), Text = (DateTime.Now.Year - 3).ToString() });
    lstRateYear.Add(new SelectListItem { Value = (DateTime.Now.Year - 4).ToString(), Text = (DateTime.Now.Year - 4).ToString() });
}


<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Employee Rating List</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label>Employee Role</label>
                                    @Html.DropDownListFor(model => model.UserRole, new SelectList(Model.UserRoleList, "Value", "Text"), "- Select -", new { @class = "form-control col-md-8 required", style = "" })
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label>Start Month</label>
                                    @Html.DropDownListFor(model => model.StartMonth, new SelectList(Model.CalenderMonth, "Value", "Text"), "- Select -", new { @class = "form-control col-md-8 required", style = "" })
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label>End Month</label>
                                    @Html.DropDownListFor(model => model.EndMonth, new SelectList(Model.CalenderMonth, "Value", "Text"), "- Select -", new { @class = "form-control col-md-8 required", style = "" })
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label>Year</label>
                                    @Html.TextBoxFor(model => model.Year, new { @type = "number", @class = "form-control required", @placeholder = "Year", @max = "9999", @maxLength = 4 })
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label>Employee Code</label>
                                    @Html.TextBoxFor(model => model.EmployeeCode, new { @type = "text", @class = "form-control", @placeholder = "Enter Employee Code" })
                                </div>
                            </div>

                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label style="padding-top:45px"></label>
                                    <button class="btn btn-primary mr-1" id="btnSearch" type="button">Search</button>
                                </div>
                            </div>

                        </div>

                        <div class="pull-right">
                            <a href="/admin/employeerating/add/0" class="btn btn-icon icon-left btn-primary"><i class="fas fa-plus-circle"></i> Add Employee Rating</a>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <td>#</td>
                                        <th>Employee Name</th>
                                        <th>Month</th>
                                        <th>Year</th>
                                        <th>Behaviour</th>
                                        <th>Ragularity</th>
                                        <th>Work</th>
                                        <th>Remark</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.EmployeeRatingList.Count > 0)
                                    {
                                        foreach (EmployeeRatingVM obj in Model.EmployeeRatingList)
                                        {
                                            <tr>
                                                <td>@counter.</td>
                                                <td>@obj.EmployeeName</td>
                                                <td>@obj.RateMonth</td>
                                                <td>@obj.RateYear</td>
                                                <td>@obj.BehaviourRate</td>
                                                <td>@obj.RegularityRate</td>
                                                <td>@obj.WorkRate</td>
                                                <td>@obj.Remarks</td>
                                            </tr>

                                            counter++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#btnSearch').click(function () {
            var userRole = $("#UserRole").val();
            var startMonth = $("#StartMonth").val();
            var endMonth = $("#EndMonth").val();
            var year = $("#Year").val();
            if (startMonth > endMonth) {
                alert("Please select valid Month.");
                return false;
            }
            var employeeCode = $("#EmployeeCode").val();
            StartLoading();
            window.location.href = "/admin/EmployeeRating/Index?startMonth=" + startMonth + "&endMonth=" + endMonth + "&year=" + year + "&userRole=" + userRole + "&employeeCode=" + employeeCode;
        });
    })
</script> 