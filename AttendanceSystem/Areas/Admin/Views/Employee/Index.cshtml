    }

    $(document).on("click", "#btnSaveFingerprint", function () {
        var employeeId = $("#hdnSelectedFingerprintEmployee").val();
        var ISOCode = $("#hdnISOCode").val();
        var BitmapCode = $("#hdnBitmapCode").val();
        var remarks = $("#txtRemarks").val();
        var isValid = true;

        if (isValid) {
            $('#addFingerprintModal').modal('hide');
            StartLoading();

            var StrURL = '/Admin/Employee/SaveEmployeeFingerprint';
            $.ajax({
                url: StrURL,
                cache: false,
                data: {
                    'EmployeeFingerprintId': 0,
                    'EmployeeId': employeeId,
                    'ISOCode': ISOCode,
                    'BitmapCode': BitmapCode,
                    'Remarks': remarks
