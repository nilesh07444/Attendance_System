@using AttendanceSystem.Helper;
@model AttendanceSystem.ViewModel.EmployeeVM
@using System.Configuration
@{
    ViewBag.Title = "Employee";

    string strEmpType = (Model.AdminRoleId == (int)AdminRoles.Worker ? "Worker" : "Employee");

    ViewBag.Title = strEmpType;
    List<EmployeeFingerprintVM> lstFingerprint = ViewData["lstFingerprint"] as List<EmployeeFingerprintVM>;

    int totalAddedFingerprint = (lstFingerprint != null ? lstFingerprint.Count : 0);
    int maximumEmployeeFingerprint = Convert.ToInt32(ConfigurationManager.AppSettings["MaximumEmployeeFingerprint"].ToString());

}

<div class="page-body">

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header" style="background-color: #425C59; display: block;">
                    <div class="pull-left">
                        <h4 style="color: #FFCEA3;">View Employee - @Model.Prefix @Model.FirstName @Model.LastName</h4>
                    </div>
                    <div class="pull-right">
                        <a href="/admin/employee" class="btn btn-warning pull-right"><i class="fas fa-backward"></i> Back</a>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" style="display: block;">
                    <div class="pull-right">
                        <a href="/admin/employee/add/@Model.EmployeeId" class="btn btn-primary pull-right"><i class="fas fa-edit"></i> Edit</a>
                    </div>
                </div>

                <div class="card-body">

                    <div class="row">
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.AdminRoleId)</label>
                            <p>@Model.AdminRoleText</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.EmployeeCode)</label>
                            <p>@Model.EmployeeCode</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.Prefix)</label>
                            <p>@Model.Prefix</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.FirstName)</label>
                            <p>@Model.FirstName</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.LastName)</label>
                            <p>@Model.LastName</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.Email)</label>
                            <p>@Model.Email</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.MobileNo)</label>
                            <p>@Model.MobileNo</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.AlternateMobile)</label>
                            <p>@Model.AlternateMobile</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.Designation)</label>
                            <p>@Model.Designation</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.Address)</label>
                            <p>@Model.Address</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.City)</label>
                            <p>@Model.City</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.Dob)</label>
                            <p>@(Model.Dob != null ? Model.Dob.Value.ToString("dd-MM-yyyy") : "")</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.DateOfJoin)</label>
                            <p>@(Model.DateOfJoin != null ? Model.DateOfJoin.Value.ToString("dd-MM-yyyy") : "")</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.BloodGroup)</label>
                            <p>@Model.BloodGroup</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.WorkingTime)</label>
                            <p>@Model.WorkingTime</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.AdharCardNo)</label>
                            <p>@Model.AdharCardNo</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.DateOfIdCardExpiry)</label>
                            <p>@(Model.DateOfIdCardExpiry != null ? Model.DateOfIdCardExpiry.Value.ToString("dd-MM-yyyy") : "")</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.AdharCardNo)</label>
                            <p>@Model.AdharCardNo</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.EmploymentCategory)</label>
                            <p>@Model.EmploymentCategoryText</p>
                        </div>
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.Remarks)</label>
                            <p>@Model.Remarks</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-4">
                            @if (Model.EmploymentCategory == (int)EmploymentCategory.DailyBased)
                            {
                                <label>Per Day Salary</label>
                            }
                            else if (Model.EmploymentCategory == (int)EmploymentCategory.HourlyBased)
                            {
                                <label>Per Hour Price</label>
                            }
                            else if (Model.EmploymentCategory == (int)EmploymentCategory.UnitBased)
                            {
                                <label>Per Unit Price</label>
                            }
                            else
                            {
                                @Html.LabelFor(model => model.PerCategoryPrice)
                            }
                            <p>@Model.PerCategoryPrice</p>
                        </div>
                        @if (Model.EmploymentCategory == (int)EmploymentCategory.MonthlyBased)
                        {
                            <div class="form-group col-4">
                                <label>@Html.LabelFor(model => model.MonthlySalaryPrice)</label>
                                <p>@Model.MonthlySalaryPrice</p>
                            </div>
                        }
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.ExtraPerHourPrice)</label>
                            <p>@Model.ExtraPerHourPrice</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.IsLeaveForward)</label>
                            <p>@(Model.IsLeaveForward ? "Yes" : "No")</p>
                        </div>
                        @if (Model.EmploymentCategory == (int)EmploymentCategory.MonthlyBased)
                        {
                            <div class="form-group col-4">
                                <label>@Html.LabelFor(model => model.NoOfFreeLeavePerMonth)</label>
                                <p>@Model.NoOfFreeLeavePerMonth</p>
                            </div>
                            <div class="form-group col-4">
                                <label>@Html.LabelFor(model => model.CarryForwardLeave)</label>
                                <p>@Model.CarryForwardLeave</p>
                            </div>
                        }
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.IsFingerprintEnabled)</label>
                            <p>@(Model.IsFingerprintEnabled ? "Yes" : "No")</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-4">
                            <label>@Html.LabelFor(model => model.ProfileImageFile)</label>
                            <p><a target="_blank" href="@ErrorMessage.EmployeeDirectoryPath/@Model.ProfilePicture"> Click here to view image </a></p>
                        </div>
                    </div>

                </div>

            </div>

            <div class="card">
                @*<div class="card-header" style="display: block;">
                        <div class="card-header-action pull-right">
                            <a id="btnAddEmployeeFingerprint" href="javascript:void(0);" class="btn btn-icon icon-left btn-primary"><i class="fas fa-plus-circle"></i> Add @strEmpType Fingerprint</a>
                        </div>
                    </div>*@
                <div class="card-header">
                    <div class="card-header-action pull-left">
                        <h4>Fingerprint List - @Model.Prefix @Model.FirstName @Model.LastName</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                            <thead>
                                <tr>
                                    <th width="10%">#</th>
                                    <th width="10%">Fingerprint</th>
                                    <th>Created Date</th>
                                    <th width="10%">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (lstFingerprint != null && lstFingerprint.Count > 0)
                                {
                                    int counter = 1;
                                    foreach (EmployeeFingerprintVM obj in lstFingerprint)
                                    {
                                        <tr>
                                            <td>@counter.</td>
                                            <td>
                                                <a href="/admin/employee/fingerprint/@obj.EmployeeId" title="Fingerprint">

                                                    @if (string.IsNullOrEmpty(obj.BitmapCode))
                                                    {
                                                        <img src="~/Content/admin-theme/assets/img/contrabook/fingerprint.jpg" alt="" class="img-fluid img-40 blur-up lazyloaded" style="width: 50px; height: 50px;" />
                                                    }
                                                    else
                                                    {
                                                        <img src="data:image/png;base64,@obj.BitmapCode" alt="" class="img-fluid img-40 blur-up lazyloaded" style="width: 50px; height: 50px;" />
                                                    }
                                                </a>
                                            </td>
                                            <td>@obj.CreatedDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                                            <td>
                                                <a href="javascript:void(0);" title="Delete" class="btn btn-icon btn-danger" onclick="fnDeleteEmployeeFingerprint('@obj.EmployeeFingerprintId')"><i class="fas fa-trash-alt"></i></a>
                                            </td>
                                        </tr>
                                        counter++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>

<div class="modal fade open" id="deleteEmployeeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Confirm</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete ?
            </div>
            <div class="modal-footer">
                <input type="hidden" id="hdnDeleteEmployeeFingerprint" /> 
                <button data-dismiss="modal" class="btn btn-primary" type="button">Close</button>
                <button id="btnDeleteEmployeeFingerprint" class="btn btn-danger" type="button">Submit</button>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>

    $('#btnDeleteEmployeeFingerprint').click(function () {
        var EmployeeFingerprint_Id = jQuery("#hdnDeleteEmployeeFingerprint").val();
        if (EmployeeFingerprint_Id != "" && EmployeeFingerprint_Id != null) {
                $('#deleteEmployeeModal').modal('hide');

                StartLoading();

                var URL = '@Url.Action("DeleteEmployeeFingerprint", "Employee")';
                $.ajax({
                    type: 'POST',
                    async: true,
                    url: URL + "?EmployeeFingerprintId=" + EmployeeFingerprint_Id,
                    success: function (result) {
                        if (result == "success") {
                            alert("Fingerprint deleted successfully");
                            window.location.reload();
                        }
                        else if (result == "notfound") {
                            alert("Fingerprint Not Found");
                        }
                        else {
                            alert("Something went wrong. Please try again");
                        }

                       StopLoading();
                    },
                    error: function (resultData) {
                       StopLoading();
                    }
                });
            }
    });

    function fnDeleteEmployeeFingerprint(EmployeeFingerprint_Id) {
        jQuery("#hdnDeleteEmployeeFingerprint").val(EmployeeFingerprint_Id);
        $('#deleteEmployeeModal').modal('show');
    }

    $(document).on("click", "#btnAddEmployeeFingerprint", function () {

        var isFingerprintEnabled = '@Model.IsFingerprintEnabled';
        var totalAddedFingerprint = '@totalAddedFingerprint';
        var maximumEmployeeFingerprint = '@maximumEmployeeFingerprint';

        if (isFingerprintEnabled == "False") {
            alert("Fingerprint is not enabled for this @strEmpType, so you can't take fingerprint.");
            return;
        }

        if (parseInt(totalAddedFingerprint) >= parseInt(maximumEmployeeFingerprint)) {
            alert("Fingerprint limit is exceed for this @strEmpType, so you can't take fingerprint.");
            return;
        }

        // let's add fingerprint now
         
    });

</script>