@using AttendanceSystem.ViewModel;
@model AttendanceSystem.ViewModel.LoginHistoryFilterVM
@{
    ViewBag.Title = "Employee";
    int counter = 1;

}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">Login History List</h4>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-header ">
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label>Employee</label>
                                            @Html.DropDownListFor(model => model.EmployeeId, new SelectList(Model.EmployeeList, "Value", "Text"), "- All -", new { @class = "form-control required", style = "" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label>Start Date</label>
                                            @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @placeholder = "Start Date", @style= "height:calc(2.25rem + 6px);" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label>End Date</label>
                                            @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @placeholder = "End Date", @style = "height:calc(2.25rem + 6px);" })
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="card-header-action">
                                            <button class="btn btn-primary mr-1" id="btnSearch" type="button"  style="font-size: 1rem">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <td>#</td>
                                        <th>Login Date</th>
                                        <th>Employee Name</th>
                                        <th>Employee Code</th>
                                        <th>Location From</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.LoginHistoryList.Count > 0)
                                    {
                                        foreach (LoginHistoryVM obj in Model.LoginHistoryList)
                                        {
                                            <tr>
                                                <td>@counter.</td>
                                                <td>@obj.LoginDate.ToString("dd MMM yyyy hh:mm tt")</td>
                                                <td>@obj.Prefix @obj.FirstName @obj.LastName</td>
                                                <td>@obj.EmployeeCode</td>
                                                <td>@obj.LocationFrom</td>
                                            </tr>
                                            counter++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#btnSearch').click(function () {
            var employeeId = $("#EmployeeId").val();
            var startDate = $("#StartDate").val();
            var endDate = $("#EndDate").val();
            StartLoading();
            window.location.href = "/admin/employee/LoginHistory?employeeId=" + employeeId + "&startDate=" + startDate + "&endDate=" + endDate;
        });
    })
</script> 