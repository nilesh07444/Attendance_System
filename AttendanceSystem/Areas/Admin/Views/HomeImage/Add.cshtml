@model HomeImageVM
@{
    ViewBag.Title = "WebsiteContent";
}

<div class="page-body">

    <!-- Container-fluid starts-->
    
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">@(Model.HomeImageId > 0 ? "Edit" : "Add") Home Image</h4>
                    </div>
                </div>
                <div class="card">
                    
                    <div class="card-body">
                        @using (Html.BeginForm("Add", "HomeImage", FormMethod.Post, new { @id = "HomeImageFormId", @class = "", enctype = "multipart/form-data", role = "form" }))
                        {

                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.HomeImageId)

                            <div class="row">
                                <div class="form-group col-12">
                                    @Html.LabelFor(model => model.HeadingText1, htmlAttributes: new { @class = "" })
                                    @Html.EditorFor(model => model.HeadingText1, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Heading Text1", maxlength = "200", @autofocus = "autofocus" } })
                                    @Html.ValidationMessageFor(model => model.HeadingText1, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">                                
                                <div class="form-group col-12">
                                    @Html.LabelFor(model => model.HeadingText2, htmlAttributes: new { @class = "" })
                                    @Html.EditorFor(model => model.HeadingText2, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Heading Text2", maxlength = "200" } })
                                    @Html.ValidationMessageFor(model => model.HeadingText2, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <lable class="col-xl-3 col-md-4"></lable>
                                <button type="submit" class="btn btn-success" style="margin-right:10px;" id="btnSubmit">Submit</button>
                                <button type="button" class="btn btn-danger" id="btnCancel">Cancel</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
 
<script type="text/javascript">
    $(document).ready(function () {
        $('#btnCancel').click(function () {
            window.location.href = "/admin/homeimage";
        }); 
    })
</script>