@model AttendanceSystem.ViewModel.FeedbackVM
@{
    ViewBag.Title = "Feedback";
}

<section class="section"> 
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header" style="background-color: #425C59;">
                    <h4 style="color: #FFCEA3;">@(Model.FeedbackId == 0 ? "Add" : "Edit") Feedback</h4>
                </div>
            </div>
            <div class="card card-primary">
                  
                @using (Html.BeginForm("Add", "Feedback", FormMethod.Post, new { @id = "FeedbackFormId", @class = "", enctype = "multipart/form-data", role = "form" }))
                {
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.FeedbackType, htmlAttributes: new { @class = "" })
                                @Html.DropDownListFor(model => model.FeedbackType, new SelectList(Model.FeedBackTypeList, "Value", "Text"), "- Select -", new { @class = "form-control required" })
                                @Html.ValidationMessageFor(model => model.FeedbackType, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.FeedbackText, htmlAttributes: new { @class = "" })
                            @Html.TextAreaFor(model => model.FeedbackText, 10, 5, new { @class = "form-control", @placeholder = "Enter Feedback Text", maxlength = "250" })
                            @Html.ValidationMessageFor(model => model.FeedbackText, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "" })
                            @Html.TextAreaFor(model => model.Remarks, 10, 5, new { @class = "form-control", @placeholder = "Enter Feedback Text", maxlength = "250" })
                            @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="card-footer text-center">
                        <button class="btn btn-success mr-1" type="submit">Submit</button>
                        <a href="/admin/feedback" class="btn btn-secondary">Cancel</a>
                    </div>

                }

            </div>
        </div>
    </div> 
</section>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
 
<script type="text/javascript">
    $(document).ready(function () {
        $('#btnCancel').click(function () {
            window.location.href = "/admin/feedback";
        });

        $('#btnSubmit').click(function () {
            if ($("#FeedbackFormId").valid()) {

            }
            else {
                return false;
            } 
        }); 
    })
</script>