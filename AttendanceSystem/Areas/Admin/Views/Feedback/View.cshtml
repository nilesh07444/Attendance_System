@using AttendanceSystem.Helper;
@model AttendanceSystem.ViewModel.FeedbackVM
@{
    /**/

}

<section class="section">

    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h4>View Feedback</h4>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-6">
                            @Html.HiddenFor(model => model.FeedbackId)
                            @Html.LabelFor(model => model.CompanyId, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                            @Model.CompanyName
                        </div>
                        <div class="form-group col-6">
                            @Html.LabelFor(model => model.FeedbackType, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                            @Model.FeedbackTypeText
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            @Html.LabelFor(model => model.CreatedDate, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                            @Model.CreatedDate.ToString("dd MMM yyyy")
                        </div>
                        <div class="form-group col-6">
                            @Html.LabelFor(model => model.FeedbackStatus, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                            @Model.FeedbackStatusText
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FeedbackText, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                        @Model.FeedbackText
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                        @Model.Remarks
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SuperAdminFeedbackText, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                        @Model.SuperAdminFeedbackText
                    </div> 
                </div>

                <div class="card-footer text-center">
                    <a href="/admin/feedback" class="btn btn-secondary">Back to List</a>
                </div>

            </div>
        </div>
    </div>

</section>
