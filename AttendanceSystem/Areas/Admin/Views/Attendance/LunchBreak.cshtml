@using AttendanceSystem.ViewModel;
@model List<EmployeeLunchBreakVM>
@{
    ViewBag.Title = "Attendance";
    int counter = 1;

    AttendanceVM AttendanceDetail = ViewData["AttendanceDetail"] as AttendanceVM;

}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="background-color: #425C59; display: block;">
                        <div class="pull-left">
                            <h4 style="color: #FFCEA3;">Lunch Break List - @AttendanceDetail.Name</h4>
                        </div>
                        <div class="pull-right">
                            <a href="/admin/attendance" class="btn btn-warning pull-right"><i class="fas fa-backward"></i> Back</a>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Employee Name</label>
                                    <p>@AttendanceDetail.Name</p>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Attendance Date</label>
                                    <p>@AttendanceDetail.AttendanceDate.ToString("dd MMM yyyy")</p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>In DateTime</label>
                                    @if (AttendanceDetail.InDateTime != null)
                                    {
                                        <p>@AttendanceDetail.InDateTime.ToString("dd MMM yyyy hh:mm tt")</p>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Out DateTime</label>
                                    @if (AttendanceDetail.OutDateTime != null)
                                    {
                                        <p>@Convert.ToDateTime(AttendanceDetail.OutDateTime).ToString("dd MMM yyyy hh:mm tt")</p>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Status</label>
                                    <p>@AttendanceDetail.StatusText</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">

                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <td>#</td>
                                        <th>Lunch Start Time</th>
                                        <th>Lunch End Time</th>
                                        <th>Lunch Start Location</th>
                                        <th>Lunch End Location</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (EmployeeLunchBreakVM obj in Model)
                                        {
                                            <tr>
                                                <td>@counter.</td>
                                                <td>@Convert.ToDateTime(obj.StartDateTime).ToString("dd MMM yyyy hh:mm tt")</td>
                                                <td>@(obj.EndDateTime != null ? Convert.ToDateTime(obj.EndDateTime).ToString("dd MMM yyyy hh:mm tt") : "")</td>
                                                <td>@obj.StartLunchLocationFrom</td>
                                                <td>@obj.EndLunchLocationFrom</td>
                                                <td>
                                                    <a target="_blank" href="/admin/employee/view/@obj.EmployeeId" title="View" class="btn btn-icon btn-warning"><i class="fas fa-eye"></i></a>
                                                </td>
                                            </tr>

                                            counter++;
                                        }
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
