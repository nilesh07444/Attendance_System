 
@using AttendanceSystem.ViewModel;
@model AttendanceSystem.ViewModel.PaymentSummuryReportFilterVM
@{
    ViewBag.Title = "Report";
    int counter = 1;
    decimal totalPendingSalary = 0;
}
 
<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">Worker Payment Summary Report</h4>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-header ">
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <label>Start Month</label>
                                            @Html.DropDownListFor(model => model.StartMonth, new SelectList(Model.CalenderMonth, "Value", "Text"), new { @class = "form-control required", style = "" })
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <label>End Month</label>
                                            @Html.DropDownListFor(model => model.EndMonth, new SelectList(Model.CalenderMonth, "Value", "Text"), new { @class = "form-control required", style = "" })
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <label>Year</label>
                                            @Html.TextBoxFor(model => model.Year, new { @type = "number", @class = "form-control required", @placeholder = "Year", @max = "9999", @maxLength = 4, @style= "height: calc(2.25rem + 6px)" })
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <label for="UserRole">Select Worker</label>
                                            @Html.DropDownListFor(model => model.EmployeeId, new SelectList(Model.EmployeeList, "Value", "Text"), "- All -", new { @class = "form-control required", style = "" })
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="card-header-action">
                                            <button class="btn btn-primary mr-1" style="font-size: 1rem" id="btnSearch" type="button">Search</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <td>#</td>
                                        <th>Employee Code</th>
                                        <th>Employee Name</th>
                                        <th>Employee Category</th>
                                        <th>Pending Salary</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.EmployeeList.Count > 0)
                                    {
                                        foreach (PaymentSummuryReportVM obj in Model.PaymentSummuryReportList)
                                        {
                                            <tr>
                                                <td>@counter.</td>
                                                <td>@obj.EmployeeCode</td>
                                                <td>@obj.EmployeeName</td>
                                                <td>@obj.EmploymentCategoryText</td>
                                                <td>@obj.PendingSalary</td>
                                            </tr>
                                            totalPendingSalary = totalPendingSalary + obj.PendingSalary;
                                            counter++;
                                        }
                                    }

                                </tbody>
                                <thead>
                                    <tr>
                                        <th colspan="4">Total</th>
                                        <th>@totalPendingSalary</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#btnSearch').click(function () {
            var startMonth = $("#StartMonth").val();
            var endMonth = $("#EndMonth").val();
            var year = $("#Year").val();
            var employeeId = $("#EmployeeId").val();

            if (startMonth == "" || startMonth == 0) {
                alert("Please select valid start month");
                return false;
            }

            if (endMonth == "" || endMonth == 0) {
                alert("Please select valid end month");
                return false;
            }

            if (year == "" || year == 0) {
                alert("Please select valid year");
                return false;
            }

            StartLoading();
            window.location.href = "/admin/payment/workerpaymentsummury?startMonth=" + startMonth + "&endMonth=" + endMonth + "&year=" + year + "&employeeId=" + employeeId;
        });
    })

</script>