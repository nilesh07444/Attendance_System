 
@using AttendanceSystem.ViewModel;
@model AttendanceSystem.ViewModel.PaymentFilterVM
@{
    ViewBag.Title = "Deleted Payment";
    int counter = 1;
}
 
<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">Deleted Payment List</h4>
                    </div>
                </div>

                <div class="card">
                    
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label>Start Date</label>
                                    @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control required", @placeholder = "Start Date" })
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label>End Date</label>
                                    @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control required", @placeholder = "Start Date" })
                                </div>
                            </div>

                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label>Employee Role</label>
                                    @Html.DropDownListFor(model => model.UserRole, new SelectList(Model.UserRoleList, "Value", "Text"), "- Select -", new { @class = "form-control col-md-8 required", style = "" })
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label style="padding-top:45px"></label>
                                    <button class="btn btn-primary mr-1" id="btnSearch" type="button">Search</button>
                                </div>
                            </div>

                        </div>
                         
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <td>#</td>
                                        <th>Employee Code</th>
                                        <th>Employee</th>
                                        <th>Date</th>
                                        <th>Credit Amount</th>
                                        <th>Debit Amount</th>
                                        <th>Payment Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.PaymentList.Count > 0)
                                    {
                                        foreach (PaymentVM obj in Model.PaymentList)
                                        {
                                            <tr>
                                                <td>@counter.</td>
                                                <td>@obj.EmployeeCode</td>
                                                <td>@obj.UserName</td>
                                                <td>@obj.PaymentDate.ToString("dd MMM yyyy")</td>
                                                <td>@obj.CreditAmount</td>
                                                <td>@obj.DebitAmount</td>
                                                <td>@obj.PaymentTypeText</td>
                                            </tr>

                                            counter++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
 
<script type="text/javascript">
    $(document).ready(function () {
        $('#btnSearch').click(function () {
            var startDate = $("#StartDate").val();
            var endDate= $("#EndDate").val();
            var userRole = $("#UserRole").val();
            StartLoading();
            window.location.href = "/admin/payment/deletedpayment?userRole=" + userRole + "&startDate=" + startDate + "&endDate=" + endDate ;
        });
    })
</script> 