@using AttendanceSystem.Helper
@using AttendanceSystem.ViewModel;
@model AttendanceSystem.ViewModel.PaymentReportFilterVM
@{
                /**/

                ViewBag.Title = "Report";
                int counter = 1;

                decimal totalcredit = 0;
                decimal totaldebit = 0;
}


<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">Employee Payment Report</h4>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-header ">
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label for="StartDate" style="font-size: 1rem">Start Date</label>
                                            @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @placeholder = "Start Date", style = "height: calc(2.25rem + 6px)" })
                                        </div>
                                    </div>

                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label for="EndDate" style="font-size: 1rem">End Date</label>
                                            @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control ", @placeholder = "End Date", style = "height: calc(2.25rem + 6px)" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label for="UserRole" style="font-size: 1rem">Select Employee</label>
                                            @Html.DropDownListFor(model => model.EmployeeId, new SelectList(Model.EmployeeList, "Value", "Text"), "- All -", new { @class = "form-control required", style = "" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="card-header-action">
                                            <button class="btn btn-primary mr-1" style="font-size: 1rem" id="btnSearch" type="button">Search</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <td>#</td>
                                        <th>Date</th>
                                        <th>Opening</th>
                                        <th>Credit</th>
                                        <th>Debit</th>
                                        <th>Closing</th>
                                        <th>Remark</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.EmployeeList.Count > 0)
                                    {
                                        foreach (EmployeePaymentReportVM obj in Model.PaymentReportList)
                                        {
                                            <tr>
                                                <td>@counter.</td>
                                                <td>@obj.Date.ToString("dd MMM yyyy")</td>
                                                <td>@obj.Opening</td>
                                                <td>@obj.Credit</td>
                                                <td>@obj.Debit</td>
                                                <td>@obj.Closing</td>
                                                <td>@obj.Remark</td>
                                            </tr>
                                            totalcredit = totalcredit + obj.Credit;
                                            totaldebit = totaldebit + obj.Debit;
                                            counter++;
                                        }
                                    }

                                </tbody>
                                <thead>
                                    <tr>
                                        <th colspan="3">Total</th>
                                        <th>@totalcredit</th>
                                        <th>@totaldebit</th>
                                        <th>@(totalcredit - totaldebit)</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#btnSearch').click(function () {
            var startDate = $("#StartDate").val();
            var endDate = $("#EndDate").val();
            var employeeId = $("#EmployeeId").val();

            if (startDate == "" ) {
                alert("Please select valid start date");
                return false;
            }

            if (endDate == "") {
                alert("Please select valid end date");
                return false;
            }

            StartLoading();
            window.location.href = "/admin/payment/employeePaymentReport?startDate=" + startDate + "&endDate=" + endDate + "&employeeId=" + employeeId;
        });
    })

</script>