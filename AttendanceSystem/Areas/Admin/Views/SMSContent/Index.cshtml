@model List<SMSContentVM>
@{
    ViewBag.Title = "SMSContent"; 
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">SMS Content List</h4>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h4>SMS Content</h4>
                    </div>
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th width="5%">Id</th>
                                        <th width="15%">SMS Title</th>
                                        <th width="15%">Seq No</th>
                                        <th width="10%">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (SMSContentVM obj in Model)
                                        {
                                            <tr class="gradeX">
                                                <td>@obj.SMSContentId</td>
                                                <td>@obj.SMSTitle</td>
                                                <td>@obj.SeqNo</td>
                                                <td>
                                                    <a href="/admin/smscontent/edit/@obj.SMSContentId" title="Edit" class="btn btn-icon btn-warning"><i class="fas fa-edit"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
 
<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery('html, body').animate({ scrollTop: 0 }, 1000);
    });
</script> 