@model SMSContentVM
@{
    ViewBag.Title = "SMSContent";
}

<section class="section">

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header" style="background-color: #425C59;">
                    <h4 style="color: #FFCEA3;">Edit SMS Content</h4>
                </div>
            </div>
            <div class="card card-primary">
                  
                @using (Html.BeginForm("Edit", "SMSContent", FormMethod.Post, new { @id = "SMSContentFormId", @class = "", enctype = "multipart/form-data", role = "form" }))
                {
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.SMSTitle, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.SMSTitle, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter SMS Title", maxlength = "100", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.SMSTitle, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.SeqNo, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.SeqNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Seq number", @maxlength = "10" } })
                                @Html.ValidationMessageFor(model => model.SeqNo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.SMSDescription, htmlAttributes: new { @class = "" })
                            @Html.TextAreaFor(model => model.SMSDescription, 10, 5, new { @class = "form-control", @placeholder = "Enter SMS Description", maxlength = "5000" })
                            @Html.ValidationMessageFor(model => model.SMSDescription, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "" })
                            @Html.TextAreaFor(model => model.Remarks, 20, 10, new { @class = "form-control", @placeholder = "Enter Remarks", maxlength = "5000" })
                            @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="card-footer text-center">
                        @Html.HiddenFor(model => model.SMSContentId)
                        <button class="btn btn-success mr-1" type="submit">Submit</button>
                        <a href="/admin/smscontent" class="btn btn-secondary">Cancel</a>
                    </div>
                }

            </div>
        </div>
    </div>

</section>
