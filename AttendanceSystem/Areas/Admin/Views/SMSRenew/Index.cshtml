@using AttendanceSystem.ViewModel;
@model List<AttendanceSystem.ViewModel.CompanySMSPackRenewVM>
@{
    /**/

    ViewBag.Title = "SMS Package Renew";
    int counter = 1;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Renew SMS Package List</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>SMS Package Name </th>
                                        <th>Renew Date</th>
                                        <th>Access Days</th>
                                        <th>Package Expiry Date</th> 
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (CompanySMSPackRenewVM obj in Model)
                                        {
                                            <tr class="gradeX">
                                                <td>@counter.</td>
                                                <td>@obj.SMSPackageName</td>
                                                <td>@obj.RenewDate.ToString("dd MMM yyyy")</td>
                                                <td>@obj.AccessDays</td>
                                                <td>@obj.PackageExpiryDate.ToString("dd MMM yyyy")</td>
                                            </tr>
                                            counter++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

