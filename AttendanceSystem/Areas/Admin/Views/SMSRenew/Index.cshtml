@using AttendanceSystem.ViewModel;
@using AttendanceSystem.Helper
@model List<AttendanceSystem.ViewModel.CompanySMSPackRenewVM>
@{
    /**/

    ViewBag.Title = "SMSPackageRenew";
    int counter = 1;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">Renew SMS Package List</h4>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" style="display: block;">
                        <div class="card-header-action pull-right">
                            <a href="/admin/smsrenew/buy" class="btn btn-icon icon-left btn-primary"><i class="fas fa-plus-circle"></i> Buy New SMS Package</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>SMS Package Name </th>
                                        <th>Renew Date</th>
                                        <th>Access Days</th>
                                        <th>No Of SMS</th>
                                        <th>Package Expiry Date</th>
                                        <th>Invoice</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (CompanySMSPackRenewVM obj in Model)
                                        {
                                            string bgcolor = "white";
                                            if (obj.CompanySMSPackRenewId == clsAdminSession.CurrentSMSPackageId)
                                            {
                                                bgcolor = "green";
                                            }
                                            <tr class="gradeX" style="background-color:@bgcolor">
                                                <td>@counter.</td>
                                                <td>@obj.SMSPackageName</td>
                                                <td>@obj.RenewDate.ToString("dd MMM yyyy")</td>
                                                <td>@obj.AccessDays</td>
                                                <td>@obj.NoOfSMS</td>
                                                <td>@obj.PackageExpiryDate.ToString("dd MMM yyyy hh:mm tt")</td>
                                                <td>
                                                    <a onclick="return downloadSMSPackageInvoice(@obj.CompanySMSPackRenewId)" title="Download Invoice PDF" href="javascript:void(0);" class="btn btn-icon icon-left btn-info">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/admin/smsrenew/view/@obj.CompanySMSPackRenewId" title="View" class="btn btn-icon btn-success"><i class="fas fa-eye"></i></a>
                                                </td>
                                            </tr>
                                            counter++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>

    function downloadSMSPackageInvoice(Id) {
        alert("Invoice PDF generation is in development.");
    }

</script>