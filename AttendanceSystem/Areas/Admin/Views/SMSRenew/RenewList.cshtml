@using AttendanceSystem.ViewModel;
@model AttendanceSystem.ViewModel.CompanySMSRenewFilterVM
@{
    ViewBag.Title = "Renew";
    int counter = 1;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">SMS Package Renew List</h4>
                    </div>
                </div>
                <div class="card">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-header ">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="StartDate">Start Date</label>
                                        @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @placeholder = "Start Date", style = "height: calc(2.25rem + 6px)" })
                                    </div>
                                </div>

                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="EndDate">End Date</label>
                                        @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control ", @placeholder = "End Date", style = "height: calc(2.25rem + 6px)" })
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="UserRole">Select Company</label>
                                        @Html.DropDownListFor(model => model.CompanyId, new SelectList(Model.CompanyList, "Value", "Text"), "- All -", new { @class = "form-control required", style = "" })
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="card-header-action">
                                        <button class="btn btn-primary mr-1" style="font-size: 1rem" id="btnSearch" type="button">Search</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Company Name </th>
                                        <th>SMS Package Name </th>
                                        <th>Renew Date</th>
                                        <th>Access Days</th>
                                        <th>No Of SMS</th>
                                        <th>Package Expiry Date</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null && Model.RenewList.Count > 0)
                                    {
                                        foreach (CompanySMSPackRenewVM obj in Model.RenewList)
                                        {
                                            <tr class="gradeX">
                                                <td>@counter.</td>
                                                <td>@obj.CompanyName</td>
                                                <td>@obj.SMSPackageName</td>
                                                <td>@obj.RenewDate.ToString("dd MMM yyyy")</td>
                                                <td>@obj.AccessDays</td>
                                                <td>@obj.NoOfSMS</td>
                                                <td>@obj.PackageExpiryDate.ToString("dd MMM yyyy")</td>
                                            </tr>
                                            counter++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">

    function exportexcel(tableId, filename) {
        $("#" + tableId).table2excel({
            name: "Table2Excel",
            filename: filename,
            fileext: ".xls"
        });
    }

    $(document).ready(function () {
        $('#btnSearch').click(function () {
            var startDate = $("#StartDate").val();
            var endDate = $("#EndDate").val();
            var companyId = $("#CompanyId").val();

            if (startDate == "") {
                alert("Please select valid start date");
                return false;
            }

            if (endDate == "") {
                alert("Please select valid end date");
                return false;
            }

            StartLoading();
            window.location.href = "/admin/smsrenew/renewlist?startDate=" + startDate + "&endDate=" + endDate + "&companyId=" + companyId ;
        });
    })

</script>