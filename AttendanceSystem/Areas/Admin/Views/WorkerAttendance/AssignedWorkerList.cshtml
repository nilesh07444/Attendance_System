@using AttendanceSystem.ViewModel;
@model AttendanceSystem.ViewModel.AssignedWorkerFilterVM
@{
    ViewBag.Title = "WorkerAttendance";
    int counter = 1;
    DateTime today = CommonMethod.CurrentIndianDateTime().Date;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">Assigned Worker List</h4>
                    </div>
                </div>
                <div class="card">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Date</label>
                                    @Html.TextBoxFor(model => model.Date, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @placeholder = "Date" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Site</label>
                                    @Html.DropDownListFor(model => model.SiteId, new SelectList(Model.SiteList, "Value", "Text"), "- All -", new { @class = "form-control col-md-8", style = "" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Worker</label>
                                    @Html.DropDownListFor(model => model.EmployeeId, new SelectList(Model.EmployeeList, "Value", "Text"), "- All -", new { @class = "form-control col-md-8", style = "" })

                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label style="padding-top:45px"></label>
                                    <button class="btn btn-primary mr-1" id="btnSearch" type="button">Search</button>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport1" style="width:100%;">
                                <thead>
                                    <tr>
                                        <td>#</td>
                                        <th>Date</th>
                                        <th>Site Name</th>
                                        <th>Worker Name</th>
                                        <th>Worker Code</th>
                                        <th>Add Attendance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.AssignedWorkerList.Count > 0)
                                    {
                                        foreach (AssignedWorkerVM obj in Model.AssignedWorkerList)
                                        {
                                            <tr>
                                                <td>@counter.</td>
                                                <td>@obj.Date.ToString("dd MMM yyyy")</td>
                                                <td>@obj.SiteName</td>
                                                <td>@obj.EmployeeName</td>
                                                <td>@obj.EmployeeCode</td>
                                                <td>
                                                    @if (obj.Date.Date == today && !obj.IsClosed)
                                                    {
                                                        <a href="/admin/workerattendance/add?siteId=@obj.SiteId&employeeId=@obj.EmployeeId&date=@obj.Date" title="View" class="btn btn-icon btn-success"><i class="fas fa-eye"></i></a>
                                                    }
                                                </td>
                                            </tr>

                                            counter++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $('#tableExport1').DataTable({
            dom: 'Bfrtip',
            "columnDefs": [
                { "sortable": false, "targets": [0, 1] }
            ],
            buttons: [
                'excel' //'copy', 'csv', , 'pdf', 'print'
            ]
        });

        $('#btnSearch').click(function () {
            if ($("#Date").val() == "") {
                alert("Please fill Date");
                return false;
            }

            var date = $("#Date").val();
            var siteId = $("#SiteId").val();
            var employeeId = $("#EmployeeId").val();

            StartLoading();
            window.location.href = "/admin/workerattendance/assignedworkerlist?siteId=" + siteId + "&date=" + date + "&employeeId=" + employeeId;
        });
    });

</script> 