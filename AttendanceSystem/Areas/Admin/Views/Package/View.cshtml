@using AttendanceSystem.Helper;
@model PackageVM
@{
    ViewBag.Title = "Package";
}

<div class="page-body">
     
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">

                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">View Package - @Model.PackageName</h4>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header" style="display: block;">
                        @*<div class="pull-left">
                            <h5>Package Information</h5>
                        </div>*@
                        <div class="pull-right">
                            <a href="/admin/package" class="btn btn-warning pull-right"><i class="fas fa-backward"></i> Back</a>
                        </div>
                    </div>

                    <div class="card-body">

                        <div class="row">
                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.PackageName)
                                <p>@Model.PackageName</p>
                            </div>

                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.Amount)
                                <p>@Model.Amount</p>
                            </div>

                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.PackageImageFile)
                                <p><a target="_blank" href="@ErrorMessage.PackageDirectoryPath/@Model.PackageImage"> Click here to view image </a></p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-12">
                                @Html.LabelFor(model => model.PackageDescription)
                                <p>@Model.PackageDescription</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.AccessDays)
                                <p>@Model.AccessDays</p>
                            </div>

                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.NoOfSMS)
                                <p>@Model.NoOfSMS</p>
                            </div>

                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.NoOfEmployee)
                                <p>@Model.NoOfEmployee</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.PackageColorCode)
                                <p>@Model.PackageColorCode</p>
                            </div>

                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.PackageFontIcon)
                                <p>@Model.PackageFontIcon</p>
                            </div>
                             
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>