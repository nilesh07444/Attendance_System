@using AttendanceSystem.Helper;
@model AttendanceSystem.ViewModel.PackageVM
@{
    ViewBag.Title = "Package";
}

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col">

                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/admin/dashboard"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item"><a href="/admin/package">Packages</a></li>
                        <li class="breadcrumb-item active">View Packages</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Package</h5>
                    </div>
                    <div class="card-body">

                        <div class="form-group row">
                            @Html.LabelFor(model => model.PackageName, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                            @Model.PackageName
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.PackageDescription, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                            @Model.PackageDescription
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                            @Model.Amount
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.AccessDays, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                            @Model.AccessDays
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.PackageImageFile, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                            <p><a target="_blank" href="@ErrorMessage.PackageDirectoryPath/@Model.PackageImage"> Click here to view image </a></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>