@using AttendanceSystem.Helper;
@model AttendanceSystem.ViewModel.SMSPackageVM
@{
    ViewBag.Title = "SMSPackage";
}

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">

                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">View SMS Package</h4>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header" style="display: block;"> 
                        <div class="pull-right">
                            <a href="/admin/smspackage" class="btn btn-warning pull-right"><i class="fas fa-backward"></i> Back</a>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="row">
                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.PackageName)
                                <p>@Model.PackageName</p>
                            </div>

                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.PackageAmount)
                                <p>@Model.PackageAmount</p>
                            </div>

                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.PackageImageFile)
                                <p><a target="_blank" href="@ErrorMessage.SMSPackageDirectoryPath/@Model.PackageImage"> Click here to view image </a></p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-12">
                                @Html.LabelFor(model => model.Description)
                                <p>@Model.Description</p>
                            </div>

                        </div>

                        <div class="row">
                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.NoOfSMS)
                                <p>@Model.NoOfSMS</p>
                            </div>

                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.AccessDays)
                                <p>@Model.AccessDays</p>
                            </div>

                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.PackageColorCode)
                                <p>@Model.PackageColorCode</p>
                            </div>

                        </div>

                        <div class="row">
                            

                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.PackageFontIcon)
                                <p>@Model.PackageFontIcon</p>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>