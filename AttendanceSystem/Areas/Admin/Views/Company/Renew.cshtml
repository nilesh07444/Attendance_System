@using AttendanceSystem.ViewModel;
@model List<AttendanceSystem.ViewModel.CompanyRenewPaymentVM>
@{     
    ViewBag.Title = "Company";
    int counter = 1;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">Renew Company List</h4>
                    </div>
                </div>
                <div class="card">
                    @*<div class="card-header">
                        <h4>Renew Company</h4>
                    </div>*@
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Company Name </th>
                                        <th>Amount</th>
                                        <th>Payment For</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Access Days</th>
                                        <th>Package Name</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (CompanyRenewPaymentVM obj in Model)
                                        {
                                            <tr class="gradeX">
                                                <td>@counter.</td>
                                                <td>@obj.CompanyName</td>
                                                <td>@obj.Amount</td>
                                                <td>@obj.PaymentFor</td>
                                                <td>@obj.StartDate</td>
                                                <td>@obj.EndDate</td>
                                                <td>@obj.AccessDays</td>
                                                <td>@obj.PackageName</td>
                                            </tr>
                                            counter++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

