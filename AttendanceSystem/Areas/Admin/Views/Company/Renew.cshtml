@using AttendanceSystem.ViewModel;
@model AttendanceSystem.ViewModel.CompanyRenewFilterVM
@{
    ViewBag.Title = "Company";
    int counter = 1;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">Renew Company List</h4>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-header ">

                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label for="StartDate" style="font-size: 1rem">Start Date</label>
                                            @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control required", @placeholder = "Start Date", style = "height: calc(2.25rem + 6px)" })
                                        </div>
                                    </div>

                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label for="EndDate" style="font-size: 1rem">End Date</label>
                                            @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control required", @placeholder = "End Date", style = "height: calc(2.25rem + 6px)" })
                                        </div>
                                    </div>
                                      
                                    <div class="col-sm-2">
                                        <div class="card-header-action">
                                            <button class="btn btn-primary mr-1" style="font-size: 1rem" id="btnSearch" type="button">Search</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                         
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Company Name </th>
                                        <th>Company Type</th>
                                        <th>Amount</th>
                                        <th>Payment For</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Access Days</th>
                                        <th>Package Name</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model.CompanyRenewList != null && Model.CompanyRenewList.Count > 0)
                                    {
                                        foreach (CompanyRenewPaymentVM obj in Model.CompanyRenewList)
                                        {
                                            <tr class="gradeX">
                                                <td>@counter.</td>
                                                <td>@obj.CompanyName</td>
                                                <td>@obj.CompanyTypeText</td>
                                                <td>@obj.Amount</td>
                                                <td>@obj.PaymentFor</td>
                                                <td>@obj.StartDate</td>
                                                <td>@obj.EndDate</td>
                                                <td>@obj.AccessDays</td>
                                                <td>@obj.PackageName</td>
                                            </tr>
                                            counter++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#btnSearch').click(function () {
            var startDate = $("#StartDate").val();
            var endDate = $("#EndDate").val();
            var companyTypeId = $("#CompanyTypeId").val();
            StartLoading();
            window.location.href = "/admin/company/renew?startDate=" + startDate + "&endDate=" + endDate;
        });
    })
</script>


