@model AttendanceSystem.ViewModel.AccountModels.ChangePasswordVM

@{
    ViewBag.Title = "ChangePassword";
}

<div class="loader"></div>
<div id="app">
    <section class="section">
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h4>Reset Password</h4>
                        </div>
                        <div class="card-body">

                            <p class="text-muted">Enter Your New Password</p>
                            @using (Html.BeginForm("ChangePassword", "Setting", FormMethod.Post, new { @id = "submit_form", @class = "login-form", ReturnUrl = ViewBag.ReturnUrl }))

                            {

                                <p>@ViewBag.ErrorMessage</p>
                                <div class="form-group">
                                    <label for="email">Current password</label>
                                    @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control placeholder-no-fix required", @placeholder = "Current Password", @autocomplete = "off" })
                                    @Html.HiddenFor(m => m.UserName)
                                </div>
                                <div class="form-group">
                                    <label for="password">New Password</label>
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control placeholder-no-fix required", @placeholder = "New Password", @autocomplete = "off" })
                                    <div id="pwindicator" class="pwindicator">
                                        <div class="bar"></div>
                                        <div class="label"></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password-confirm">Confirm Password</label>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control placeholder-no-fix required", @placeholder = "Confirm Password", @autocomplete = "off" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" id="btn_submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                        Reset Password
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#btn_submit').click(function (e) {
            if ($("#submit_form").valid()) {
                $(".loader").fadeOut("slow");
                if ($("#CurrentPassword").val() == "") {
                    alert("Current password is required");
                    return false;
                }
                if ($("#NewPassword").val() == "") {
                    alert("New password is required");
                    return false;
                }
                if ($("#ConfirmPassword").val() == "") {
                    alert("Confirm password is required");
                    return false;
                }
                var newPassword = $("#NewPassword").val();
                var confirmPassword = $("#ConfirmPassword").val();
                if (confirmPassword != newPassword) {
                    alert("New password and confirm password must be same");
                    return false;
                }
            }
        });
    });

</script>