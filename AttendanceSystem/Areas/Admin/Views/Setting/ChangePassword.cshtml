@model AttendanceSystem.ViewModel.AccountModels.ChangePasswordVM

@{
    ViewBag.Title = "ChangePassword";
}

<section class="section">

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header" style="background-color: #425C59; display: block;">
                    <div class="pull-left">
                        <h4 style="color: #FFCEA3;">Change Password</h4>
                    </div>
                </div>
            </div>
            <div class="card card-primary">
                <div class="card-body">
                    @using (Html.BeginForm("ChangePassword", "Setting", FormMethod.Post, new { @id = "submit_form", @class = "login-form", ReturnUrl = ViewBag.ReturnUrl }))
                    {
                        <p style="color: red;">@ViewBag.ErrorMessage</p>
                        <div class="form-group col-sm-4">
                            <label for="email">Current password *</label>
                            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", @placeholder = "Current Password", @autocomplete = "off" })
                            @Html.HiddenFor(m => m.UserName)
                        </div>
                        <div class="form-group col-sm-4">
                            <label for="password">New Password *</label>
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "New Password", @autocomplete = "off" })
                            <div id="pwindicator" class="pwindicator">
                                <div class="bar"></div>
                                <div class="label"></div>
                            </div>
                        </div>
                        <div class="form-group col-sm-4">
                            <label for="password-confirm">Confirm Password *</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", @autocomplete = "off" })
                        </div>
                        <div class="form-group col-sm-2">
                            <button type="submit" id="btn_submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                Change Password
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</section>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#btn_submit').click(function (e) {
        
                $(".loader").fadeOut("slow");
                if ($("#CurrentPassword").val() == "") {
                    alert("Current password is required");
                    return false;
                }
                if ($("#NewPassword").val() == "") {
                    alert("New password is required");
                    return false;
                }
                if ($("#ConfirmPassword").val() == "") {
                    alert("Confirm password is required");
                    return false;
                }
                var newPassword = $("#NewPassword").val();
                var confirmPassword = $("#ConfirmPassword").val();
                if (confirmPassword != newPassword) {
                    alert("New password and confirm password must be same");
                    return false;
                }
       
        });
    });

</script>