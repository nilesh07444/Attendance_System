@model SuperAdminSettingVM
@{
    ViewBag.Title = "Setting";
}

<section class="section">

    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h4>Edit General Setting</h4>
                </div>

                @using (Html.BeginForm("EditSuperAdminSetting", "Setting", FormMethod.Post, new { @id = "SettingFormId", @class = "", enctype = "multipart/form-data", role = "form" }))
                {
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.SiteCompanyFreeAccessDays, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.SiteCompanyFreeAccessDays, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Free Access Days (Site Company)", maxlength = "10" } })
                                @Html.ValidationMessageFor(model => model.SiteCompanyFreeAccessDays, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.OfficeCompanyFreeAccessDays, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.OfficeCompanyFreeAccessDays, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Free Access Days (Office Company)", maxlength = "10" } })
                                @Html.ValidationMessageFor(model => model.OfficeCompanyFreeAccessDays, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.AmountPerEmp, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.AmountPerEmp, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Amount Per Employee Buy", maxlength = "10" } })
                                @Html.ValidationMessageFor(model => model.AmountPerEmp, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="card-footer text-center">
                        @Html.HiddenFor(model => model.SettingId)
                        <button class="btn btn-primary mr-1" type="submit">Submit</button>
                        <a href="/admin/setting" class="btn btn-secondary">Cancel</a>
                    </div>

                }

            </div>
        </div>
    </div>

</section>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script type="text/javascript">
    
</script>
