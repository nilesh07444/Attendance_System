@using AttendanceSystem.Helper; 
@{
    ViewBag.Title = "Setting";

    SuperAdminSettingVM objSASetting = ViewData["objSASetting"] as SuperAdminSettingVM;
    CompanyAdminSettingVM objCASetting = ViewData["objCASetting"] as CompanyAdminSettingVM;

}

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">

                    <div class="card-header">
                        <h4>General Setting</h4>
                        <div class="card-header-action">
                            <a href="/admin/setting/edit" class="btn btn-primary">Edit</a> 
                        </div>
                    </div>
                      
                    @if (clsAdminSession.RoleID == (int)AdminRoles.SuperAdmin)
                    {
                        <div class="card-body">

                            <div class="form-group row">
                                <label class="col-xl-3 col-md-4">Account Free Access Days</label>
                                @objSASetting.AccountFreeAccessDays
                            </div>
                             
                            <div class="form-group row">
                                <label class="col-xl-3 col-md-4">Amount Per Employee Buy</label>
                                @objSASetting.AmountPerEmp
                            </div>

                        </div>
                    }
                    else if (clsAdminSession.RoleID == (int)AdminRoles.CompanyAdmin)
                    {
                    }

                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>