@using AttendanceSystem.Helper;
@model AttendanceSystem.ViewModel.MaterialVM
@{
    
}

<section class="section">

    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h4>@(Model.MaterialId == 0 ? "Add" : "Edit") Material</h4>
                </div>

                @using (Html.BeginForm("Add", "Material", FormMethod.Post, new { @id = "MaterialFormId", @class = "", enctype = "multipart/form-data", role = "form" }))
                {
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.MaterialCategoryId, htmlAttributes: new { @class = "" })
                                @Html.DropDownListFor(model => model.MaterialCategoryId, new SelectList(Model.MaterialCategoryList, "Value", "Text"), "- Select -", new { @class = "form-control required" })
                                @Html.ValidationMessageFor(model => model.MaterialCategoryId, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.MaterialId)
                            </div>
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.SiteId, htmlAttributes: new { @class = "" })
                                @Html.DropDownListFor(model => model.SiteId, new SelectList(Model.SiteList, "Value", "Text"), "- Select -", new { @class = "form-control required" })
                                @Html.ValidationMessageFor(model => model.SiteId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.MaterialDate, htmlAttributes: new { @class = "" })
                                 @Html.TextBoxFor(model => model.MaterialDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control required", @placeholder = "Enter Material Date" })
                                @Html.ValidationMessageFor(model => model.MaterialDate, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.Qty, htmlAttributes: new { @class = "" })
                                @Html.TextBoxFor(model => model.Qty, new { @type = "number", @class = "form-control", @placeholder = "Enter Qty", @maxlength = "10", @min=1 })
                                @Html.ValidationMessageFor(model => model.Qty, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.InOut, htmlAttributes: new { @class = "" })
                                @Html.DropDownListFor(model => model.InOut, new SelectList(Model.MaterialStatusList, "Value", "Text"), "- Select -", new { @class = "form-control required" })
                                @Html.ValidationMessageFor(model => model.InOut, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "" })
                            @Html.TextAreaFor(model => model.Remarks, 10, 5, new { @class = "form-control", @placeholder = "Enter Remarks", maxlength = "250" })
                            @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="card-footer text-center">
                        <button class="btn btn-primary mr-1" type="submit">Submit</button>
                        <a href="/admin/material" class="btn btn-secondary">Cancel</a>
                    </div>

                }

            </div>
        </div>
    </div>

</section>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#btnCancel').click(function () {
            window.location.href = "/admin/material";
        });

        $('#btnSubmit').click(function () {
            if ($("#MaterialFormId").valid()) {

            }
            else {
                return false;
            }

        });

    })
</script>