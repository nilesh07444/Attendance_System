@using AttendanceSystem.ViewModel;
@using AttendanceSystem.Helper;
@model List<AttendanceSystem.ViewModel.MaterialVM>
@{
    ViewBag.Title = "Material";
    int counter = 1;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header" style="background-color: #425C59;">
                        <h4 style="color: #FFCEA3;">Deleted Material List</h4>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <td>#</td>
                                        <th>Material Category Name</th>
                                        <th>Site Name</th>
                                        <th>Material Date</th>
                                        <th>Inward</th>
                                        <th>Outward</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (MaterialVM obj in Model)
                                        {
                                            <tr>
                                                <td>@counter.</td>
                                                <td>@obj.MaterialCategoryText</td>
                                                <td>@obj.SiteName</td>
                                                <td>@obj.MaterialDate.ToString("dd MMM yyyy")</td>
                                                <td>@(obj.InOut == (int)MaterialStatus.Inward ? obj.Qty.ToString() : "")</td>
                                                <td>@(obj.InOut == (int)MaterialStatus.Outward ? obj.Qty.ToString() : "")</td>
                                            </tr>

                                            counter++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 