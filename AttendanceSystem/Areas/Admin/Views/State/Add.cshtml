@model StateVM
@{
    ViewBag.Title = "StateDistrict";
}

<section class="section">

    <div class="row">
        <div class="col-12">

            <div class="card card-primary">

                @using (Html.BeginForm("Add", "State", FormMethod.Post, new { @id = "StateFormId", @class = "", enctype = "multipart/form-data", role = "form" }))
                {
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-12">
                                @Html.LabelFor(model => model.StateName, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.StateName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter State Name ", maxlength = "100", @autofocus = "autofocus" } })
                                @Html.ValidationMessageFor(model => model.StateName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="card-footer text-center">
                        @Html.HiddenFor(x => x.StateId)
                        <button class="btn btn-success mr-1" type="submit">Submit</button>
                        <a href="/admin/state" class="btn btn-secondary">Cancel</a>
                    </div>

                }

            </div>
        </div>
    </div>

</section>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#btnCancel').click(function () {
            window.location.href = "/admin/state";
        });

        $('#btnSubmit').click(function () {
            if ($("#StateFormId").valid()) {
            }
            else {
                return false;
            }
        }); 
    })
</script>