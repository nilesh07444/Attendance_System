                                        <div class="founder-text">
                                            <span style="color: #EFB938;">@obj.CompanyPersonName</span>
                                            <p style="color: #FFFFFF; font-family: Font Arial Bold;">@obj.CompanyName</p>
                                        </div>
                                    </div>
                                </div>
