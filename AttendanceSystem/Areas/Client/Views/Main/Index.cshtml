                {

                    <div class="col-md-3 col-sm-6">
                        <div class="pricingTable">
                            <div id="smspricingTableHeader_@smsPackageCounter" class="pricingTable-header" onmouseover="mouseoverSMS('@smsPackageCounter', '@obj.PackageColorCode')" onmouseout="mouseoutSMS('@smsPackageCounter', '@obj.PackageColorCode')">
                                <i class="@obj.PackageFontIcon"></i>
                                <div class="price-value" id="smsheading_@smsPackageCounter" style="color: @obj.PackageColorCode">
                                    @{ string strPackageAmount = CommonMethod.GetFormatterAmount(obj.PackageAmount); }
                                    @strPackageAmount
                                    <i class="month fas fa-rupee-sign"></i>
                                </div>
                            </div>
                            <h3 class="heading" style="margin-top: 10px; color: @obj.PackageColorCode">@obj.PackageName</h3>
                            <div class="pricing-content">
                                <ul>
                                    <li><b>@obj.AccessDays</b> Access Days</li>
                                    <li><b>@obj.NoOfSMS</b> No Of SMS</li>
                                </ul>
                            </div>
                            <div class="pricingTable-signup">
                                <a target="_blank" href="/admin/login" style="background: @obj.PackageColorCode">Buy</a>
                            </div>
                            <div class="mt-2 ml-2 mr-2" style="color: @obj.PackageColorCode">
                                @obj.Description
                            </div>
                        </div>
                    </div>
                    { smsPackageCounter++; }
                }
            </div>
        </div>
    </div>
}
<!-- SMS Package Area End -->
<!-- Video Add Area Start -->
@if (ViewBag.VideoAddLink != null)
{
    <div class="categories-area section-padding30">
        <div class="container">
            <div class="row">
                <div class="cl-xl-7 col-lg-8 col-md-10">
                    <!-- Section Tittle -->
                    <div class="section-tittle mb-70">
                        <span>Video Adds</span>
                        <h2>Video Adds & Descrption</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div style="display: table; height: 400px; overflow: hidden;">
                        <div style="display: table-cell; vertical-align: middle;">
                            <h3 style="text-align: center;">
                                @ViewBag.VideoAddDescription
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <center>
                        <iframe width="100%" height="350" src="@ViewBag.VideoAddLink" frameborder="0" allow="accelerometer; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </center>
                </div>
            </div>
        </div>
    </div>
}
<!-- Video Add Area End -->
