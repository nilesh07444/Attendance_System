@using AttendanceSystem.ViewModel
@using AttendanceSystem.Helper
@{
    ViewBag.Title = "Home";

    List<HomeImageVM> lstHomeImages = ViewData["lstHomeImages"] as List<HomeImageVM>;
    List<PackageVM> lstAccountPackages = ViewData["lstAccountPackages"] as List<PackageVM>;
    List<SMSPackageVM> lstSMSPackages = ViewData["lstSMSPackages"] as List<SMSPackageVM>;
    List<OurClientVM> lstOurClients = ViewData["lstOurClients"] as List<OurClientVM>;
    List<TestimonialVM> lstTestimonials = ViewData["lstTestimonials"] as List<TestimonialVM>;

    List<HomeSliderVM> lstHomeSlider1 = ViewData["lstHomeSlider1"] as List<HomeSliderVM>;
    List<HomeSliderVM> lstHomeSlider2 = ViewData["lstHomeSlider2"] as List<HomeSliderVM>;

}

<!-- Home Image Slider - Start-->
@if (lstHomeImages != null && lstHomeImages.Count > 0)
{
    <div class="slider-area" style="background-image: url('@ViewBag.HomeFirstImage');">
        <div class="slider-active">

            @foreach (HomeImageVM obj in lstHomeImages)
            {
                <div class="single-slider slider-height d-flex align-items-center">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-8 col-lg-7 col-md-8">
                                <div class="hero__caption">
                                    <span data-animation="fadeInLeft" data-delay=".1s">Committed to success</span>
                                    <h1 data-animation="fadeInLeft" data-delay=".5s">@obj.HeadingText1</h1>
                                    <p data-animation="fadeInLeft" data-delay=".9s">@obj.HeadingText2</p>
                                    <!-- Hero-btn -->
                                    <div class="hero__btn" data-animation="fadeInLeft" data-delay="1.1s">
                                        <a target="_blank" href="/service" class="btn hero-btn">Our Services</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
}
<!-- Home Image Slider - End -->

@if (lstHomeSlider1 != null && lstHomeSlider1.Count > 0)
{
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" style="padding-top: 30px;background-color: #f7f7f7;">
            @{ int slider1Counter = 1; }
            @foreach (HomeSliderVM obj in lstHomeSlider1)
            {
                <div class="carousel-item @(slider1Counter == 1 ? "active" : "")">
                    <img class="d-block w-100" src="@ErrorMessage.HomeSliderDirectoryPath/@obj.SliderImageName" alt="First slide">
                </div>
                slider1Counter++;
            }
        </div>
    </div>
}

<!-- Package Area Start -->
@if (lstAccountPackages != null && lstAccountPackages.Count > 0)
{
    <div class="categories-area section-padding30">
        <div class="container">
            <div class="row">
                <div class="cl-xl-7 col-lg-8 col-md-10">
                    <!-- Section Tittle -->
                    <div class="section-tittle mb-70">
                        <span>Our Account Packages</span>
                        <h2>Buy Account Packages</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @{ int accountPackageCounter = 1; }
                @foreach (PackageVM obj in lstAccountPackages)
                {

                    <div class="col-md-3 col-sm-6">
                        <div class="pricingTable">
                            <div id="pricingTableHeader_@accountPackageCounter" class="pricingTable-header" onmouseover="mouseover('@accountPackageCounter', '@obj.PackageColorCode')" onmouseout="mouseout('@accountPackageCounter', '@obj.PackageColorCode')">
                                <i class="@obj.PackageFontIcon"></i>
                                <div class="price-value" id="heading_@accountPackageCounter" style="color: @obj.PackageColorCode">
                                    @{ string strPackageAmount = CommonMethod.GetFormatterAmount(obj.Amount); }
                                    @strPackageAmount
                                    <i class="month fas fa-rupee-sign"></i>
                                </div>
                            </div>
                            <h3 class="heading" style="margin-top: 10px; color: @obj.PackageColorCode">@obj.PackageName</h3>
                            <div class="pricing-content">
                                <ul>
                                    <li><b>@obj.AccessDays</b> Access Days</li>
                                    <li><b>@obj.NoOfEmployee</b> No Of Employee</li>
                                    <li><b>@obj.NoOfSMS</b> No Of SMS</li>
                                </ul>
                            </div>
                            <div class="pricingTable-signup">
                                <a target="_blank" href="/admin/login" style="background: @obj.PackageColorCode">Buy</a>
                            </div>
                            <div class="mt-2 ml-2 mr-2" style="color: @obj.PackageColorCode">
                                @obj.PackageDescription
                            </div>
                        </div>
                    </div>
                    { accountPackageCounter++; }
                }
            </div>
        </div>
    </div>
}

@if (lstHomeSlider2 != null && lstHomeSlider2.Count > 0)
{
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{ int slider2Counter = 1; }
            @foreach (HomeSliderVM obj in lstHomeSlider2)
            {
                <div class="carousel-item @(slider2Counter == 1 ? "active" : "")">
                    <img class="d-block w-100" src="@ErrorMessage.HomeSliderDirectoryPath/@obj.SliderImageName" alt="First slide">
                </div>
                slider2Counter++;
            }
        </div>
    </div>
}

<!-- SMS Package Area Start -->
@if (lstSMSPackages != null && lstSMSPackages.Count > 0)
{
    <div class="categories-area section-padding30">
        <div class="container">
            <div class="row">
                <div class="cl-xl-7 col-lg-8 col-md-10">
                    <!-- Section Tittle -->
                    <div class="section-tittle mb-70">
                        <span>Our SMS Packages</span>
