@model AttendanceSystem.ViewModel.CompanyRequestVM
@{

    List<SelectListItem> lstPrefix = new List<SelectListItem>();

    lstPrefix.Add(new SelectListItem { Value = "Mr", Text = "Mr" });
    lstPrefix.Add(new SelectListItem { Value = "Mrs", Text = "Mrs" });
    lstPrefix.Add(new SelectListItem { Value = "Miss", Text = "Miss" });
}
<!--? Hero Start -->
<div class="slider-area2">
    <div class="slider-height2 hero-overly2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap hero-cap2 text-center">
                        <h2>Company Request</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- ================ contact section start ================= -->
<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Submit Request</h2>
            </div>
            <div class="col-lg-12">


                @using (Html.BeginForm("Index", "CompanyRequest", FormMethod.Post, new { @id = "CompanyRequestFormId", @class = "form-contact contact_form", enctype = "multipart/form-data", role = "form" }))
                {
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Company Type</label>
                                @Html.DropDownListFor(model => model.CompanyTypeId, new SelectList(Model.CompanyTypeList, "Value", "Text"), "- Select -", new { @class = "form-control required" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Company Name</label>
                                @Html.TextBoxFor(model => model.CompanyName, new { @type = "text", @class = "form-control required", @placeholder = "Enter Company Name"
                           })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Prefix</label>
                                @Html.DropDownListFor(model => model.Prefix, new SelectList(lstPrefix, "Value", "Text"), "- Select -", new { @class = "form-control required", style = "width: 100%" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>First Name</label>
                                @Html.TextBoxFor(model => model.Firstname, new { @type = "text", @class = "form-control required", @placeholder = "Enter First Name" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Last Name</label>
                                @Html.TextBoxFor(model => model.Lastname, new { @type = "text", @class = "form-control required", @placeholder = "Enter Last Name" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Date of Birth</label>
                                @Html.TextBoxFor(model => model.DateOfBirth, new { @type = "date", @class = "form-control required", @placeholder = "Enter Date of Birth" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Email Id</label>
                                @Html.TextBoxFor(model => model.EmailId, new { @type = "email", @class = "form-control required", @placeholder = "Enter Email Id" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Mobile No</label>
                                @Html.TextBoxFor(model => model.MobileNo, new { @type = "text", @class = "form-control required", @placeholder = "Enter Mobile No" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Alternate Mobile No</label>
                                @Html.TextBoxFor(model => model.AlternateMobileNo, new { @type = "text", @class = "form-control", @placeholder = "Enter Alternate MobileNo" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>City</label>
                                @Html.TextBoxFor(model => model.City, new { @type = "text", @class = "form-control required", @placeholder = "Enter City" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>State</label>
                                @Html.TextBoxFor(model => model.State, new { @type = "text", @class = "form-control required", @placeholder = "Enter State" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Aadhar Card No</label>
                                @Html.TextBoxFor(model => model.AadharCardNo, new { @type = "Text", @class = "form-control required", @placeholder = "Enter Aadhar Card No", @maxlength = "12" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Pan Card No</label>
                                @Html.TextBoxFor(model => model.PanCardNo, new { @type = "text", @class = "form-control required", @placeholder = "Enter Pan Card No", @maxlength = "10" })

                                @Html.ValidationMessageFor(model => model.PanCardNo, "", new { @class = "error" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>GST No</label>
                                @Html.TextBoxFor(model => model.GSTNo, new { @type = "text", @class = "form-control required", @placeholder = "Enter GST No", @maxlength = "15" })
                                @Html.ValidationMessageFor(model => model.GSTNo, "", new { @class = "error" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Aadhar Card Photo</label>
                                @Html.TextBoxFor(model => model.AadharCardPhotoFile, new { type = "file", @class = "form-control col-md-8" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Pan Card Photo</label>
                                @Html.TextBoxFor(model => model.PanCardPhotoFile, new { type = "file", @class = "form-control col-md-8" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>GST Photo</label>
                                @Html.TextBoxFor(model => model.GSTPhotoFile, new { type = "file", @class = "form-control col-md-8" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Company Photo</label>
                                @Html.TextBoxFor(model => model.CompanyPhotoFile, new { type = "file", @class = "form-control col-md-8" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Cancellation Cheque Photo</label>
                                @Html.TextBoxFor(model => model.CancellationChequePhotoFile, new { type = "file", @class = "form-control col-md-8" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" id="btnSubmit" class="button button-contactForm boxed-btn">Send</button>
                    </div>
                }
            </div>

        </div>
    </div>
</section>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $("#CompanyName").change(function () {
            var companyName = $("#CompanyName").val();

            var StrURL = '/Client/companyRequest/CheckCompanyName?companyName=' + companyName;
            $.ajax({
                url: StrURL,
                cache: false,
                data: {},
                type: 'POST',
                success: function (data) {
                    if (data.Status == true) {
                        alert("Company with same name already exist, Please use another name.")
                        $("#CompanyName").val("");
                    }

                },
                error: function (req, status, error) {
                    alert(error);
                }
            });
        });

        $('#btnSubmit').click(function () {
            if ($("#CompanyRequestFormId").valid()) {
                var now = new Date;
                var target = new Date($("#DateOfBirth").val());
                if (target.getDate() >= now.getDate()) {
                    alert("Please valid date of birth.");
                    return false;
                }

                if ($("#CompanyTypeId").val() == "") {
                    alert("Please select company type.");
                    return false;
                }

                if ($("#Prefix").val() == "") {
                    alert("Please select prefix.");
                    return false;
                }

                if ($("#AadharCardPhoto").val() == "") {
                    alert("Please select Aadhar card photo.");
                    return false;
                }

                if ($("#PanCardPhoto").val() == "") {
                    alert("Please select Pan card photo.");
                    return false;
                }

                if ($("#GSTPhoto").val() == "") {
                    alert("Please select GST photo.");
                    return false;
                }

                if ($("#CompanyPhotoFile").val() == "") {
                    alert("Please select Company photo.");
                    return false;
                }

                if ($("#CancellationChequePhotoFile").val() == "") {
                    alert("Please select Cancellation cheque photo.");
                    return false;
                }
            }
            else {
                return false;
            }

        });
    })
</script>