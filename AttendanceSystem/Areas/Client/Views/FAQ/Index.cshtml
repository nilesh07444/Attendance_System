@using AttendanceSystem.Models
@{
    ViewBag.Title = "About Us";

    List<tbl_DynamicContent> lstContent = ViewData["lstContent"] as List<tbl_DynamicContent>;
}

<!--? Hero Start -->
<div class="slider-area2">
    <div class="slider-height2 hero-overly2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap hero-cap2 text-center">
                        <h2>FAQ</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="about-details section-padding30">
    <div class="container">
        <div class="row">

            <div class="accordion theme-accordion" id="accordionExample">
                @{ int counter = 1; }
                @if (lstContent != null && lstContent.Count > 0)
                {
                    foreach (tbl_DynamicContent obj in lstContent)
                    {
                        <div class="card">
                            <div class="card-header" id="headingOne_@counter">
                                <h5 class="mb-0"><button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne_@counter" aria-expanded="true" aria-controls="collapseOne_@counter">@obj.ContentTitle</button></h5>
                            </div>
                            <div id="collapseOne_@counter" class="collapse" aria-labelledby="headingOne_@counter" data-parent="#accordionExample">
                                <div class="card-body">
                                    @{ string desc = obj.ContentDescription.Replace("\n", "<br />\n"); }

                                    @Html.Raw(desc)
                                </div>
                            </div>
                        </div>
                        counter++;
                    }
                }

            </div>

        </div>
    </div>
</div> 