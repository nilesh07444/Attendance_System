@using AttendanceSystem.Models
@{
    ViewBag.Title = "Privacy Policy";

    List<tbl_DynamicContent> lstContent = ViewData["lstContent"] as List<tbl_DynamicContent>;
}

<div class="slider-area2">
    <div class="slider-height2 d-flex align-items-center"  style="background-image: url(/Content/client-theme/assets/img/contrabook/hero_privacypolicy.png)">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap hero-cap2 text-center">
                        @*<h2>Privacy Policy</h2>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 
<div class="container mb-2" style="margin-top:40px;">
    @*<h3 class="" style="text-align: center;">Privacy & Policy</h3>*@

    @if (lstContent != null && lstContent.Count > 0)
    {
        foreach (tbl_DynamicContent obj in lstContent)
        {
            <h5>@obj.ContentTitle</h5>
            <h6 style="text-align: justify;">@Html.Raw(obj.ContentDescription)</h6><br />
        }
    }
    else
    {
        <p style="text-align:center;">No any Privacy Policy added yet !!!</p>
    }

</div>